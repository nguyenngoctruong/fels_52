<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <div class="col-md-10 activity">Activities</div>
    <div class="col-md-10 lesson-list"><%= render @activities %></div>
  </div>
</div>